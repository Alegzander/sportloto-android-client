<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/view_rounded_background_semi_black"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/dailyImg"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_day_orange" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/weeklyImg"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_week_orange" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/monthlyImg"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_month_orange" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/tokenImg"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_token_orange" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/walletTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="0x1F0asdfasdfasdfasdfasdfcAF644F81F3c3951F992b85CDa2b4"
        android:textColor="@color/colorWhite" />

    <Space
        android:layout_width="16dp"
        android:layout_height="match_parent" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_x_red" />

</LinearLayout>